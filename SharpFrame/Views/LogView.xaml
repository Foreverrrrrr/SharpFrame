<UserControl x:Class="SharpFrame.Views.LogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SharpFrame.Views"
             mc:Ignorable="d" 
             Width="1770" Height="900" Background="White">
    <UserControl.Resources>
        <local:ConVerter x:Key="Converter"/>
    </UserControl.Resources>
    <Grid>
        <DataGrid  AutoGenerateColumns="True"  Height="700" ColumnWidth="*" ItemsSource="{Binding ObservableObj}" HorizontalContentAlignment="Center" Focusable="False" CanUserReorderColumns="False" VerticalAlignment="Top" Margin="20,20,20,0" MinColumnWidth="10">
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell" >
                    <Setter Property="Background" Value="{Binding Path=状态, Converter={StaticResource Converter}}"/>
                </Style>
            </DataGrid.CellStyle>
            <DataGrid.RowStyle>
                <!-- 重写行样式：禁止交互 -->
                <Style TargetType="DataGridRow">
                    <Setter Property="IsHitTestVisible" Value="False"/>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>

    </Grid>
</UserControl>
